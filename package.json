{
	"name": "mockserver",
	"version": "3.1.1",
	"description": "Easily mock your webservices while testing frontends.",
	"main": "mockserver.js",
	"scripts": {
		"test": "mocha -b",
		"coverage": "nyc mocha",
		"clean-install": "npm cache clean --force && rm -Rf node_modules && npm install",
		"lint": "eslint . --fix",
		"pretty": "prettier --write \"./**/*.{js,json}\""
	},
	"bin": {
		"mockserver": "bin/mockserver.js"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/namshi/mockserver"
	},
	"keywords": [
		"test",
		"mock",
		"api",
		"webservice",
		"rest",
		"namshi"
	],
	"author": "Mohammad Hallal <mohd.hallal@gmail.com>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/namshi/mockserver/issues"
	},
	"homepage": "https://github.com/namshi/mockserver",
	"dependencies": {
		"colors": "^1.4.0",
		"header-case-normalizer": "^1.0.3",
		"js-combinatorics": "^0.6.1",
		"yargs": "^16.2.0"
	},
	"devDependencies": {
		"chai": "^4.3.4",
		"eslint": "^7.31.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^3.4.0",
		"husky": "^7.0.1",
		"lint-staged": "^11.1.1",
		"mocha": "^9.0.3",
		"mock-req": "^0.2.0",
		"nyc": "^14.1.1",
		"@prettier/plugin-xml": "^1.0.2",
		"prettier": "^2.3.2"
	},
	"engines": {
		"node": ">=10.16.0"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.(js|json)": [
			"prettier --write",
			"git add"
		],
		"*.js": [
			"eslint --fix",
			"git add"
		]
	}
}
